{
  "name": "@holo-host/envoy",
  "version": "0.2.0",
  "description": "Server that facilitates communication between hosted Agents and a Host's Holochain Conductor",
  "main": "build/index.js",
  "scripts": {
    "install": "npm run build",
    "build": "tsc --esModuleInterop --lib es7,dom --outDir ./build -p ./src",
    "test": "npm run test-unit && npm run test-integration",
    "test-unit": "mocha ./tests/unit/",
    "test-integration": "mocha ./tests/integration/",
    "fetch-dnas": "sh ./scripts/fetch-dna.sh",
    "start-conductor:service": "holochain-run-dna -p 42222 -i servicelogger ./dnas/servicelogger.dna.gz &> service-conductor.log &",
    "start-conductor:internal": "holochain-run-dna -p 42233 -i holo-hosting-app ./dnas/holo-hosting-app.dna.gz &> internal-conductor.log &",
    "start-conductor:hosted": "holochain-run-dna -p 42244 -i elemental-chat ./dnas/elemental-chat.dna.gz &> hosted-conductor.log &",
    "start-conductor:all": "npm run start-conductor:service && npm run start-conductor:internal && npm run start-conductor:hosted",
    "start-conductor": "holochain-run-dna ./dnas/holo-hosting-app.dna.gz"
  },
  "author": "Holo Ltd.",
  "contributors": [
    "Matthew Brisebois <matthew.brisebois@holo.host>"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Holo-Host/envoy/"
  },
  "dependencies": {
    "@holo-host/cryptolib": "^0.2.0",
    "@holochain/conductor-api": "0.0.1-dev.13",
    "@msgpack/msgpack": "^2.3.0",
    "@whi/stdlog": "^0.3.3",
    "concat-stream": "^2.0.0",
    "json-stable-stringify": "^1.0.1",
    "rpc-websockets": "^4.6.1",
    "sprintf-js": "^1.1.2"
  },
  "devDependencies": {
    "@holo-host/chaperone": "^0.2.0",
    "@holochain-open-dev/holochain-run-dna": "^0.2.3",
    "@types/node": "^12.11.1",
    "braintree-jsdoc-template": "^3.3.0",
    "chai": "^4.2.0",
    "chokidar-cli": "^2.0.0",
    "fetch-mock": "^8.0.0",
    "jsdoc": "^3.6.3",
    "mocha": "^6.2.1",
    "node-fetch": "^2.6.0",
    "puppeteer": "^2.1.1",
    "superstruct": "^0.8.3",
    "typescript": "^3.6.4",
    "why-is-node-running": "^2.1.2"
  }
}
